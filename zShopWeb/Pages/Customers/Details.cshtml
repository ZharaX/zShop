@page "/Customers/Details/{handler?}"
@model zShopWeb.Pages.Customer.DetailsModel

@{
	ViewData["Title"] = "Personal Information";
}

<div id="detailsContainer" class="block center customer-details-container" style="z-index: 20">
	<partial name="_Customer" model="@Model.Customer" />
</div>

@if (Model.DisplayOrders)
{
	<div id="ordersContainer" class="block center customer-details-container" style="z-index: 10">
		<partial name="./Orders/_Orders" model="@Model.Orders" />
	</div>
}

@section Scripts {
	<script>
		displayingDetails = '@(Model.DisplayDetails)' === '@true';
		displayingOrders = '@(Model.DisplayOrders)' === '@true';
	</script>
}
